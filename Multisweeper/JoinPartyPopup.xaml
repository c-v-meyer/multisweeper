<Window x:Class="Multisweeper.JoinPartyPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Multisweeper"
        mc:Ignorable="d"
        Title="JoinPartyPopup" Height="110" Width="333" ResizeMode="NoResize">
    <Grid Background="#0D800D" Margin="0,0,0,0">
        <TextBox x:Name="ip" HorizontalAlignment="Left" Height="20" Margin="38,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="264"/>
        <Button Content="Abbrechen" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="144" Click="CancelButton_Click"/>
        <Button Content="Verbinden" HorizontalAlignment="Left" Margin="158,41,0,0" VerticalAlignment="Top" Width="144" Click="ConnectButton_Click"/>
        <Label Content="IP:" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
